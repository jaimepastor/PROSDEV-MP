<html>
    <head>
        <link rel="stylesheet" type="text/css" href="signup.css">
    </head>

    <body>
        <div class="bg">
            
            <div id="nav-bar">
                <div class="logocontainer"><img src="/image/LOGO2.png" class="logo"></div>
            </div>
            
            <div class="register-container"> 
                <div class="register-header">
                    <span class="register-header-label">Sign Up for Free!</span>
                </div>
                
                    <form action="user/register" method="post">
                        <div class="form-content">
                            <div class="input-section">
                                <div class="item-label">First Name</div>
                                <input class="input-field" type="text" name="firstName">
                            </div>

                            <div class="input-section">
                                <div class="item-label">Last Name</div>
                                <input class="input-field" type="text" name="lastName">
                            </div>

                            <div class="input-section">
                                <div class="item-label">Region</div>
                                <input class="input-field" type="text" name="region">
                            </div>

                            <div class="input-section">
                                <div class="item-label">Email</div>
                                <input class="input-field" type="text" name="email">
                            </div>

                            <div class="input-section">
                                <div class="item-label">Password</div>
                                <input class="input-field" type="password" name="password">
                            </div>

                            <div class="input-section">
                                <div class="item-label">Confirm Password</div>
                                <input class="input-field" type="password" name="confirmPass">
                            </div>

                            <div class="login-button-container">
                                <input type="submit" value="Register" class="subbutton login-button">
                            </div>
                        </div>
                    </form>
                
                <div class="login">
                    Have an account?
                    <a class="login-link" href="user/loginpage">Sign in!</a>
                </div>
                
            </div>
        </div>
    </body>
</html>