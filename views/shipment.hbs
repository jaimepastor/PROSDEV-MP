<html>
    <head>
        <link rel="stylesheet" type="text/css" href="shipping.css">
        <script src="jQuery.js"></script>
        
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css">
    </head>
    
    <body>
        <div class="shipping-container">
                        <div id="nav-bar">
<!-----------------------NAVBAR JS----------------------------------->
                <script>
                    window.onscroll = function(){
                        stickyBar()
                    };

                    var navbar = document.getElementById("nav-bar");
                    var sticky = navbar.offsetTop;

                    function stickyBar(){
                        if(window.pageYOffset > sticky){
                            navbar.classList.add("sticky")
                        }else{
                            navbar.classList.remove("sticky")
                        }
                    }
                </script>
<!-------------------------------------------------------------------->
                <img src="image/LOGO2.png" class="logo">
                
                <ul class="nav">
                    <a href="/games" name="games">Games</a>
                    <a href="/system" name="system">System</a>
                    <a href="/upload" name="upload">Upload</a>
                    
                    <div class="nav-right">
                        <div class="search-container">
                            <input class="search-box" type="text" name="search" placeholder=" Search..." >
                            <a class="search-btn" href="#">
                                <i class="fas fa-search"></i>
                            </a>
                        </div>
                        <a href="/cart"><i class="fas fa-shopping-cart cart"></i></a>
                        <a href="/profile" class="profile" name="profile">Profile</a>
                    </div>
                </ul>
            </div>
            
            <div class="bg-container">
                <img src="image/bg2.jpg" id="bg-img">
            </div>  
            
            <div class="main-body">
                <div class="main-body-bg"></div>
                
                <div class="shipping-header">
                    <span class="shipping-header-label">Shipping</span>
                </div>
                
                
<!--                <div class="checkout-body">-->
                    <div class="address-label">Address</div>
                    <div class="name-label">Full Name</div>
                    <div class="country-label">Country</div>
                    <div class="postal-label">Postal Code</div>
                        <form action="checkout">
                            <div class="address-input">
                                <input class="address" type="text" name="address">
                            </div>

                            <div class="name-input">
                                <input class="name" type="text" name="name">
                            </div>
                            
                            <div class="country-input">
                                <input class="country" type="text" name="country">
                            </div>
                        
                            <div class="postal-input">
                                <input class="postal" type="text" name="postal">
                            </div>

                            <div class="shipping-button-container">
                                <input type="submit" value="Proceed" class="subbutton checkout-button">
                            </div>
                        </form>
            
                <div class="back">
                    <a href="/cart" class="back-link">Back to Cart</a>
                </div>
<!--                </div>-->
            </div>
            
            <div class="cart-body">
                <div class="cart-body-bg"></div>
                
<!--                <div class="cart-header">-->
                    <span class="cart-header-label">My Cart</span>
<!--                </div>-->
                
                <div class="table-header">
                    <span class="sTitle">TITLE</span> 
                    <span class="sCost">COST</span>
                </div>
                        
                <div class="product-container">
                    <div class="product">
                        <a class="pTitle" href="/rental">Spiderman PS4</a>
                        <span class="pCost">500</span>
                    </div>
                </div>
                
            </div>
        </div>
    </body>
</html>