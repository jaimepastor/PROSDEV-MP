<html>
    <head>
        <link rel="stylesheet" href="/reddeadps4.css">
        <script src="/jQuery.js"></script>
        <meta charset="UTF-8">
        
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css">
    </head>
    
    <body>
                  <!-- The Modal -->
        <div id="reviewModal" class="modal">

        <!-- Modal content -->
        <div class="modal-content">
        <div class="modal-header">
            <span class="close">&times;</span>
            <h2>Owner (owner)</h2>
        </div>
        <div class="modal-body">
            <div class ="review-container">
                <div class = "indiv-review">
                    <div class = "review-content">
                        "Owner is very responsive and game is in great condition!" 
                    </div>
                    <div class = "review-author">
                        by Rebecalyn Lao
                    </div>
                </div>
              
                
            </div>
        </div>
        <div class="modal-footer">
            <form>
                <input type = "text" class = "review_textbox" placeholder="Leave a review!">
                <button class="rent_button">SUBMIT</button>
            </form>
            
        </div>
        </div>

        </div>

        <div class="dashboard-container">
            <!--NAVBAR-->
            <div id="nav"></div>
            <script>
                $.get("/nav.html", function(data){
                    $("#nav").replaceWith(data).stop();
                });
            </script>
            <!--START-->
            <h1 id="game_title"> {{game.title}}</h1>         
            <div class="details-container">
                <div class="product-image-container">
                    <img class="product-image" src="{{game.link}}">
                </div>
                        
                <div class="product-container">
                    <div class="left_info">
                        <div class="details">
                            <span id="release-label"> Rating: </span>
                            <span id="release">{{game.rating}}</span>
                        </div>
                        <div class="details">
                            <span id="release-label"> Console: </span>
                            <span id="release">{{game.rating}}</span>
                        </div>
                        <div class="details">
                            <span id="release-label"> Genre: </span>
                            <span id="release">{{game.genre}}</span>
                        </div>
                        <div class="details">
                            <span id="release-label">Released</span>
                            <span id="release">{{game.release}}</span>
                        </div>
                        
                    </div>
                </div>
            </div>
        </div>
        <div class="post-container">
            {{#each posts}}
            <div class="fix" id="post-item">
                <h1 class="label_number"> {{@index}}</h1>
                <div class="indiv_listing">
                    <div class="details_lower">
                        <div class="details">
                            <span id="release-label"> Owner: </span>
                            <span id="release" name="user">{{user}}</span>
                        </div>
                        <div class="details">
                            <span id="release-label"> Region: </span>
                            <span id="release" name="region">{{region}}</span>
                        </div>
                        <div class="details">
                            <span id="release-label"> Condition: </span>
                            <span id="release">{{description}}</span>
                        </div>
                        <input type="hidden" value="{{game.title}}" name="title">
                        <input type="hidden" value="{{game.release}}" name="release">
                    </div>
                    <div class="details_lower">
                        <div class="fix">
                            <div id="release-label">Status:</div>
                            <div class="important_info" id="release" name="status">{{status}}</div>
                        </div>
                        <div class="fix">
                            <div id="release-label">Price:</div>
                            <div class="important_info" id="release" name="price">{{price}}</div>
                        </div>
                        <div class="fix">
                        <a href="#" class="item-sub-link check_reviews">
                            Check the Reviews!
                        </a>
                        </div>
                    </div>
                    <form class="details_lower" action="/cart/add-to-cart" method="POST">
                        <div class="fix">   
                            <input type="number" class="input_number" placeholder="3" name="duration">  
                            <p class="days_display"> Days</p>
                        </div>
                        <button class="rent_button" type="submit">ADD TO CART</button>
                        <input type="hidden" value="{{_id}}" name="postingID">
                        <input type="hidden" value="{{game._id}}" name="gameID">
                        {{!-- <a href="/post/available">    
                            <div class="rent_button">Available for Rent</div>
                        </a> --}}  
                        
                    </form>
                </div>
            </div>
            {{/each}}

        </div>

      
        <script>
            $(document).ready(function(){
                if(!$('#post-item').length){
                    $('.post-container').append('<div class="empty-label">No listings available.</div>')
                }
            })

            // Get the modal
                var modal = document.getElementById("reviewModal");

                // Get the button that opens the modal
                var btns = document.querySelectorAll('.check_reviews');

                // Get the <span> element that closes the modal
                var span = document.getElementsByClassName("close")[0];

                // When the user clicks on the button, open the modal
                [].forEach.call(btns, function(el) {
                    el.onclick = function() {
                        modal.style.display = "block";
                    }
                })

                // When the user clicks on <span> (x), close the modal
                span.onclick = function() {
                modal.style.display = "none";
                }

                // When the user clicks anywhere outside of the modal, close it
                window.onclick = function(event) {
                if (event.target == modal) {
                    modal.style.display = "none";
                }
                }
        </script>
    </body>
</html>