<html>
    <head>
        <link rel="stylesheet" href="/loginscreen.css">
<!--        <link rel="stylesheet" href="popupS.css">-->
    </head>
    
    <body>
        <div class="bg">
            
            <div class="bg-container">
                <img src="/image/bg2.jpg" id="bg-img">
            </div>
            
            <div class="header">
                <img src="/image/LOGO2.png" id="head-logo">
            </div>
            
            <div class="login-container">
                <div class="login-container-bg"></div>
                <div class="login-header">
                    <span class="login-header-label">Welcome back!</span>
                </div>
                
                <div class="username-label">Username</div>
                <div class="password-label">Password</div>
                    <form action="login" method="post">
                        <div class="username-input">
                            <input class="username" type="text" name="username">
                        </div>

                        <div class="password-input">
                            <input class="password" type="password" name="password">
                        </div>

                        <div class="login-button-container">
                            <input type="submit" value="Login" class="subbutton login-button">
                        </div>
                    </form>
                
                <div class="register">
                    New to GameShare?
                    <a class="register-link" href="/registerpage">Sign up now!</a>
                </div>
            </div>
        </div>
    </body>
</html>